%}
<div class="standard-item ">
  <div class="blog-card-container blog-card-container-{{ forloop.index }}-{{ section.id }} {%- if section.settings.enable_spacing_between_items == false %}{% endif -%}">
    {% if section.settings.media_ratio != "none" %}
    <div class="standard-item-media">
      {% if forloop.index > 1  %}
        <div class="smi-article-card-wrapper border-fake border-fake-{{ forloop.index }} border-fake-{{ forloop.index }}-{{ section.id }}" id="border_fake_{{ forloop.index }}">
          <div class="border-fake-c">b</div>
        </div>
      {% endif %}
      <a href="{{ article.url }}" class="blog-item-border-{{ forloop.index }}-{{ section.id }} standard-item-blog blog-item-border blog-item-border-{{ section.id }} 
        {% if forloop.index == 1 %} fst-standard-item {% endif %} blog-item-padding blog-item-border-{{ forloop.index }} smi-article-card-wrapper standard-smi-border
          {% if section.settings.media_shape == 'round' %} smi-border-round {% elsif section.settings.media_shape == 'shape-blob' %} smi-border-shape-blob {%  endif %}
       {% if section.settings.enable_spacing_between_items == true and section.settings.media_shape != 'shape-blob' %} standard-smi-shadow {% endif %}
       ">
        <div
          class="img-container smi-article-card-wrapper {{ media_wrapper_classes }} "
          {% if media_shape contains 'blob' %}
            style="--media-ratio: {{ media_ratio }}; --shape-hover: var({{ shape_hover }})"
          {% endif %} data-type="item-image"
        >
          {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy', class: media_classes, widths: '400,600,800,1000,1200', sizes: '(max-width: 380px) calc(100vw/4)' }}
        </div>
      </a>
    </div>
  {% endif %}
    <div class="blog-standard-container blog-standard-container-content-{{ forloop.index }}
      {% if section.settings.content_alignment == "left" %} smi-pr-md {% elsif section.settings.content_alignment == "right" %} smi-pl-md {% else %} smi-px-md {% endif %} smi-pt-lg">
      <div class="blog-standard-container-content-detail-{{ forloop.index }}-{{ section.id }}">
      {% if section.settings.show_tags == true %}
        <div class="article-tag card-item-full-width smi-text-content-75 smi-mb-xs {{ classes_position_button }}">
          {%- for tag in article.tags -%}
            <a class="smi-text-sm article-tag-item " href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
            {% if forloop.index < article.tags.size %}
              <div class="tag-dot">dot</div>
            {% endif %}
          {%- endfor -%}
        </div>
      {% endif %}
      {% if section.settings.show_date != false
        or section.settings.show_author != false
        or section.settings.show_comment_count != false
      %}
        <div class="article-date-author smi-text-content-75 smi-mb-sm {{ classes_position_button }}">
          {% if section.settings.show_date == true %}
            <div>
              {% render 'smi-icons', icon: 'calendar' %}
              <span class="smi-text-sm">{{ article.published_at | date: '%d/%m/%Y' }}</span>
            </div>
          {% endif %}
          {% if section.settings.show_author == true %}
            <div>
              {% render 'smi-custom-icons', icon: 'avatar' %}
              <span class="smi-text-sm">{{- article.author -}}</span>
            </div>
          {% endif %}
          {% if section.settings.show_comment_count == true %}
            <div>
              {% render 'smi-icons', icon: 'comment' %}
              <span class="smi-text-sm">
                {{- article.comments_count }}
                {% if article.comments_count <= 1 %} comment {% else %} comments {% endif -%}
              </span>
            </div>
          {% endif %}
        </div>
      {% endif %}
      <div class="title-blog card-item-full-width {{ classes_position_button }}">
        <a href="{{ article.url }}" class="article-title smi-h4" data-type="item-heading">{{ article.title }}</a>
      </div>
      {% if section.settings.show_excerpt == true %}
        <div class="article-content smi-text-content-75 smi-text-md {% if section.settings.show_excerpt == false %} smi-mt-md {% else %} smi-mt-xxs {% endif %} {{ classes_position_button }}" data-type="item-description">
          {% assign stripExcerpt = article.excerpt | strip %}
          {% if stripExcerpt != blank and stripExcerpt != "" %}
            {{ article.excerpt }}
            {% else %}
          {{ article.content | strip_html }}
          {% endif %}
        </div>
      {% endif %}
      {% if button_style != 'none' %}
        <div class="{{ classes_position_button }} {{ button_pos }} ">
          <div class="smi-button-wrapper smi-component-buttons">
            <a
              href="{{ article.url }}"
              class="smi-mt-md smi-button smi-text-button {% if button_style contains "text" %} {% else %} smi-shadow  smi-border {% endif %} smi-button--{{ button_style | split: '_' | first }} {%- if button_style contains 'arrow' %} smi-has-icon{% endif -%} {{- settings.smi_animations_hover_elements | default: shop.metafields.smind.settings.value.buttonHoverEffect | default: 'none' | prepend: ' smi-hover-' }}"
            >
              <span>{{- 'smind.general.view_more' | t -}}</span>
              {% if button_style contains 'arrow' %}
                <div>
                  {% render 'smi-icons', icon: 'arrow-right-2' %}
                </div>
              {% endif %}
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  </div>
